.normal-font {
  font-size: 26rpx;
  color: #434245;
}

.normal-font .red {
  font-size: 40rpx;
  color: #333;
  /* color: #ff1200; */
  /* font-weight: bold; */
}

.loading {
  margin-bottom: 2px;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  align-items: center;
}

.loading-content {
  position: relative;
}

.loading-content::after, .loading-content::before {
  height: 1px;
  width: 50px;
  content: "";
  display: block;
  background-color: #ADABAC;
  position: absolute;
  bottom: 50%;
}

.loading-content::after {
  right: -55px;
}

.loading-content::before {
  left: -55px;
}